<p id="notice"><%= notice %></p>
<style>
*{
  padding:0; margin:0;
}
body
.titulo{
    color: #72705B; 
    font-family: monospace, Arial, Helvetica, sans-serif;
    font-weight: bold;
    font-size: 50px;    
    margin-top: 30px;
    margin-bottom: 50px;
}
.formulario{
    width: 35%;
    height: auto;
    border-radius: 4px;
    border:2.5px solid #000;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.formulario p{
    width: 100%;
    height: auto;
    margin-bottom: 20px;
}
</style>
<div class="small-container center-block">
<center>
<h2 class="titulo">Show stores</h2>
<div class="formulario">
<center>
<p>
  <strong>Name:</strong>
  <%= @store.name %>
</p>

<p>
  <strong>Street:</strong>
  <%= @store.street %>
</p>

<p>
  <strong>Number:</strong>
  <%= @store.number %>
</p>

<p>
  <strong>Zipcode:</strong>
  <%= @store.zipcode %>
</p>

<p>
  <strong>City:</strong>
  <%= @store.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @store.country %>
</p>

<p>
  <strong>Product:</strong>
  <%= @store.product %>
</p>
</div>
<%= link_to 'Edit', edit_store_path(@store) %>  <i class="fas fa-edit"></i>|
<%= link_to 'Back', stores_path %> <i class="fas fa-sign-out-alt"></i>
</center>
